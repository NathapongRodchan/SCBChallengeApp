<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Custom_Indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="shape">oval</item>
        <item name="padding_left">7dp</item>
        <item name="padding_right">7dp</item>

        <item name="selected_drawable">@drawable/ic_indicator_selected</item>
        <item name="unselected_drawable">@drawable/ic_indicator</item>
        <item name="selected_width">11dp</item>
        <item name="selected_height">11dp</item>
        <item name="unselected_width">11dp</item>
        <item name="unselected_height">11dp</item>
    </style>

</resources>
